[Unit]
Description=WSO2 Enterprise Integrator Analytics - Worker
After=network.target

[Service]
ExecStart=<%=@install_path%>/wso2/analytics/wso2/worker/bin/carbon.sh start
ExecStop=<%=@install_path%>/wso2/analytics/wso2/worker/bin/carbon.sh stop
ExecRestart=<%=@install_path%>/wso2/analytics/wso2/worker/bin/carbon.sh restart
PIDFile=<%=@install_path%>/wso2/analytics/wso2/worker/runtime.pid
User=<%=@user%>
Group=<%=@user_group%>
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
