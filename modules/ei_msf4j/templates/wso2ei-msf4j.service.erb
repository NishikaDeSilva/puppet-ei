[Unit]
Description=WSO2 Enterprise Integrator - MSF4J
After=network.target

[Service]
ExecStart=<%=@install_path%>/wso2/<%=@profile%>/bin/carbon.sh start
ExecStop=<%=@install_path%>/wso2/<%=@profile%>/bin/carbon.sh stop
ExecRestart=<%=@install_path%>/wso2/<%=@profile%>/bin/carbon.sh restart
PIDFile=<%=@install_path%>/wso2/<%=@profile%>/carbon.pid
User=<%=@user%>
Group=<%=@user_group%>
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
